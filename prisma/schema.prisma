generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  firstName     String
  lastName      String
  password      String
  email         String       @unique
  rollno        String?      @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean      @default(false)
  isStaff       Boolean      @default(false)
  isRegistered  Boolean      @default(false)
  canLogin      Boolean      @default(true)
  mID           String?
  role          String       @default("STUDENT")
  accounts      Account[]
  Proposal      Proposal[]
  sessions      Session[]
  team          Team?        @relation("User_lead")
  mentees       Team[]       @relation("User_mentor")
  teamMembers   TeamMember[]
  teamEvaluations TeamEvaluation[] @relation("MentorEvaluations")
}

model TeamMember {
  id         String   @id @default(cuid())
  teamId     String
  userId     String
  joinedAt   DateTime @default(now())
  role       String   @default("MEMBER")
  name       String
  email      String
  rollNumber String?
  team       Team     @relation(fields: [teamId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
  individualEvaluation IndividualEvaluation? @relation("MemberEvaluation")

  @@unique([teamId, userId])
}

model Team {
  id            String       @id @default(cuid())
  projectTitle  String
  projectPillar String
  status        String       @default("PENDING")
  statusMessage String?
  mentorId      String?
  leadId        String?      @unique
  teamNumber    String       @unique
  batch         String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  project       Project?
  proposals     Proposal[]
  lead          User?        @relation("User_lead", fields: [leadId], references: [id])
  mentor        User?        @relation("User_mentor", fields: [mentorId], references: [id])
  members       TeamMember[]
  evaluation    TeamEvaluation?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Proposal {
  id                Int       @id @default(autoincrement())
  title             String
  description       String
  content           String
  attachment        String?
  ppt_attachment    String?
  poster_attachment String?
  link              String?
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  state             String    @default("DRAFT")
  remarks           String?
  remark_updated_at DateTime?
  authorId          String
  teamCode          String?
  author            User      @relation(fields: [authorId], references: [id])
  Team              Team?     @relation(fields: [teamCode], references: [id])
}

model Project {
  id           Int      @id @default(autoincrement())
  name         String
  createdAt    DateTime @default(now())
  poster       String?
  link         String?
  video        String?
  description  String?
  meta         String?
  themeId      Int?
  code         String   @unique
  gallery      String
  isAccepted   Boolean  @default(false)
  presentation String?
  report       String?
  Team         Team     @relation(fields: [code], references: [id])
  theme        Theme?   @relation(fields: [themeId], references: [id])
}

model Theme {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  Project     Project[]
}

model TeamEvaluation {
  id                      String                 @id @default(cuid())
  teamId                  String                 @unique
  team                    Team                   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  mentorId                String
  mentor                  User                   @relation("MentorEvaluations", fields: [mentorId], references: [id])
  
  // Group marks (same for everyone in the team)
  posterMarks             Float                  @default(0)
  videoMarks              Float                  @default(0)
  reportMarks             Float                  @default(0)
  pptMarks                Float                  @default(0)
  groupScore              Float                  @default(0)
  
  // External evaluator
  externalEvaluatorName   String?
  externalEvaluatorEmail  String?
  
  // Metadata
  status                  String                 @default("DRAFT")
  remarks                 String?
  evaluatedAt             DateTime               @default(now())
  updatedAt               DateTime?
  
  // Relations
  individualEvaluations   IndividualEvaluation[]
  
  @@index([teamId])
  @@index([mentorId])
}

model IndividualEvaluation {
  id                      String           @id @default(cuid())
  teamEvaluationId        String
  teamEvaluation          TeamEvaluation   @relation(fields: [teamEvaluationId], references: [id], onDelete: Cascade)
  
  teamMemberId            String           @unique
  teamMember              TeamMember       @relation("MemberEvaluation", fields: [teamMemberId], references: [id], onDelete: Cascade)
  
  memberId                String
  memberName              String
  memberEmail             String
  
  // Individual criteria (6 marks total from mentor)
  learningContribution    Float            @default(0) // 2 marks
  presentationSkill       Float            @default(0) // 2 marks
  contributionToProject   Float            @default(0) // 2 marks
  individualScore         Float            @default(0) // Sum of above (max 6)
  
  // External evaluator marks
  externalEvaluatorMarks  Float            @default(0)
  
  // Total marks
  totalIndividualMarks    Float            @default(0) // groupScore + individualScore + externalMarks (max 17+)
  
  @@index([teamEvaluationId])
  @@index([memberId])
  @@index([teamMemberId])
}
